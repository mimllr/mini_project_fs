<h1>Convert</h1>
<form action="/exchange">
  <div class="row">
    <div class="col-12 col-md-6">
        <div class="row">
          <div class="col">
              <h4>Select Starting Currency</h4>
          </div>
        </div>
        <div class="row">
          <div class="col-12 col-md-6">
            <div class="btn-group btn-group-toggle" data-toggle="buttons">
              <label class="btn btn-secondary">
                <input type="radio" name="options" id="USD" autocomplete="off" checked> USD
              </label>
              <label class="btn btn-secondary">
                <input type="radio" name="options" id="EUR" autocomplete="off"> EUR
              </label>
              <label class="btn btn-secondary">
                <input type="radio" name="options" id="SGD" autocomplete="off"> SGD
              </label>
          </div>
        </div>
      </div>
    </div>
  </div>
</form>